model MeritList {
  id                String          @id @default(cuid())
  configId          String
  config            MeritListConfig @relation(fields: [configId], references: [id])
  appliedClassId    String
  appliedClass      Class           @relation("GeneratedMeritLists", fields: [appliedClassId], references: [id])
