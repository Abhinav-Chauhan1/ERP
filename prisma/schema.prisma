  @@unique([meritListId, rank])
  @@index([meritListId])
  @@index([applicationId])
  @@index([rank])
}

// Backup Model
model Backup {
  id        String   @id @default(cuid())
  filename  String
  size      BigInt
  location  String
  encrypted Boolean  @default(true)
  status    String   @default("COMPLETED")
