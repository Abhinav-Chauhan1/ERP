# Production Environment Configuration for SikshaMitra ERP
# Copy this file to .env.production and update with your production values

# App Configuration
NEXT_PUBLIC_APP_NAME="SikshaMitra ERP"
NEXT_PUBLIC_APP_URL="https://sikshamitra.com"

# Domain Configuration
# CRITICAL: Set this to your actual production domain
ROOT_DOMAIN=sikshamitra.com
NEXT_PUBLIC_ROOT_DOMAIN=sikshamitra.com

# Authentication (NextAuth v5)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_production_auth_secret_here
AUTH_URL=https://sikshamitra.com
AUTH_TRUST_HOST=true

# OAuth Provider Credentials (Optional)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Cloudflare R2 Storage Configuration
# CRITICAL: These must match your Cloudflare R2 settings
R2_ACCOUNT_ID=0ea3345fbf2e324457b0ce0fb45eace0
R2_ACCESS_KEY_ID=45a97ef7d946e9842605fce4749ab520
R2_SECRET_ACCESS_KEY=f47be9d0344d09d54abee4089458e8398ee20b695eedd740384a7e29d5322bd5
R2_BUCKET_NAME=sikshamitra
R2_REGION=auto

# CRITICAL: R2 Custom Domain Configuration
# Option 1: Use R2 Public URL (Recommended for quick setup)
# Format: https://pub-{accountId}.r2.dev
R2_CUSTOM_DOMAIN=https://pub-0ea3345fbf2e324457b0ce0fb45eace0.r2.dev

# Option 2: Use Custom Domain (If you've set up a custom domain in Cloudflare)
# R2_CUSTOM_DOMAIN=https://cdn.sikshamitra.com

# R2 Endpoint URL
R2_ENDPOINT=https://0ea3345fbf2e324457b0ce0fb45eace0.r2.cloudflarestorage.com

# CDN Configuration
CDN_SIGNING_SECRET=your_production_cdn_signing_secret

# Database Configuration
DATABASE_URL='postgresql://user:password@host:port/database?sslmode=require&connection_limit=50&pool_timeout=20&connect_timeout=10'

# Email Service (Resend)
RESEND_API_KEY=your_production_resend_api_key
EMAIL_FROM=noreply@sikshamitra.com

# Two-Factor Authentication
TWO_FACTOR_ENCRYPTION_KEY=your_production_32_byte_hex_key

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_WEBHOOK_SECRET=your_production_razorpay_webhook_secret

# Rate Limiting (Redis) - REQUIRED for production
REDIS_URL="your_production_redis_url"
REDIS_TOKEN="your_production_redis_token"

# IP Whitelisting Configuration
WHITELISTED_IPS=
MONITORING_SERVICE_IPS=
TRUSTED_IPS=
ADMIN_IP_WHITELIST=

# SMS Gateway (MSG91)
MSG91_AUTH_KEY=your_production_msg91_auth_key
MSG91_SENDER_ID=SCHOOL
MSG91_ROUTE=transactional
MSG91_COUNTRY=91

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_production_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_production_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_production_business_account_id
WHATSAPP_APP_SECRET=your_production_app_secret
WHATSAPP_API_VERSION=v18.0
WHATSAPP_VERIFY_TOKEN=your_production_webhook_verify_token

# Communication Service Feature Flags
USE_WHATSAPP=true

# Cron Job Security
CRON_SECRET=your_production_cron_secret

# Feature Flags
NEXT_PUBLIC_USE_ENHANCED_SYLLABUS=true
